<!-- New Bottom Nav for Mobile View -->
<div id="bottom-nav" class="bottom-nav-hidden">

    <a href="/listings/new"><i class="fa-solid fa-magnifying-glass fs-5"></i><br>Airbnb</a>
    <% if (!currUser) { %>

        <a href="/signup"><i class="fa-solid fa-user-plus fs-5"></i><br>Signup</a>
        <a href="/login"><i class="fa-regular fa-user fs-5"></i><br>Login</a>
        <% } else { %>

            <a href="/logout"><i class="fa-regular fa-user fs-5"></i><br>LOGOUT</a>
            <% } %>
</div>

<script>
    let lastScrollTop = 0;
    let bottomNav = document.getElementById("bottom-nav");

    window.addEventListener("scroll", function() {
        let scrollTop = window.pageYOffset || document.documentElement.scrollTop;

        if (scrollTop > lastScrollTop) {
            // Scrolling down, hide the bottom nav with transition
            bottomNav.classList.add("bottom-nav-hidden");
        } else {
            // Scrolling up, show the bottom nav with transition
            bottomNav.classList.remove("bottom-nav-hidden");
        }

        lastScrollTop = scrollTop;
    });
</script>